# Example Environment Configuration
# Copy this file to .env.development or .env.production and fill in your actual values

NODE_ENV=development
PORT=3000

# Neon Configuration (Development only - for Neon Local)
NEON_API_KEY=your_neon_api_key_from_console
NEON_PROJECT_ID=your_neon_project_id_from_console
PARENT_BRANCH_ID=main

# Database Configuration
# Development: postgres://neon:npg@localhost:5432/neondb?sslmode=require
# Production: postgres://user:password@ep-xxxxx.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgres://neon:npg@localhost:5432/neondb?sslmode=require

# JWT Configuration
JWT_SECRET=change_this_to_a_random_secret_minimum_32_characters
JWT_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=change_this_to_a_random_cookie_secret_minimum_32_characters

# ArcJet Security
ARCJET_KEY=your_arcjet_key_here

# Logging
LOG_LEVEL=debug
